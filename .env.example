# ============================================================================
# Parking Management System - Environment Configuration
# ============================================================================
# Copy this file to .env and adjust values as needed
# ============================================================================

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------------------------------------
DB_HOST=db
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=parking_system

# ----------------------------------------------------------------------------
# JWT Authentication
# ----------------------------------------------------------------------------
JWT_SECRET=parking-system-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# ----------------------------------------------------------------------------
# Pricing Configuration
# ----------------------------------------------------------------------------
# Free tolerance period in minutes before charging begins
PRICING_FREE_TOLERANCE_MINUTES=15

# Prorated billing fraction in minutes (e.g., 60 = hourly billing)
PRICING_PRORATED_FRACTION_MINUTES=60

# Hourly parking rate in local currency
PRICING_HOURLY_RATE=5.00

# Maximum daily charge cap
PRICING_DAILY_CAP=50.00

# Fee for lost parking ticket
PRICING_LOST_TICKET_FEE=100.00

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
# Port for the backend API service
API_PORT=3000

# Node environment (development, production)
NODE_ENV=production

# ----------------------------------------------------------------------------
# Frontend Configuration
# ----------------------------------------------------------------------------
# Port for the web frontend service (Docker maps to 80 internally)
WEB_PORT=5173

# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:3000
